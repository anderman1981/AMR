{
  "name": "sistema-maestro-amrois",
  "version": "1.0.0",
  "description": "AMROIS - Sistema de orquestación distribuida para 50+ dispositivos Windows",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/start.js",
    "watch:deploy": "./scripts/launch/auto-deploy-watcher.sh",
    "dev:admin": "node admin/server.js",
    "dev": "nodemon src/start.js",
    "dev:agents": "nodemon src/agents/index.js",
    "check-api": "curl -f http://localhost:12000/api/health 2>/dev/null && echo '✅ API Agents Activa' || echo '❌ API Agents Inactiva'",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "build": "pkg src/start.js --out-path dist/",
    "docker:build": "docker build -t amrois-system .",
    "docker:run": "docker-compose up -d",
    "dev:dashboard": "cd dashboard && vite --port 3465",
    "prod:dashboard": "cd dashboard && vite preview --port 3466",
    "migrate": "node scripts/migrate/init-db.js"
  },
  "keywords": [
    "orchestration",
    "distributed",
    "windows",
    "agents",
    "llm",
    "automation"
  ],
  "author": "GSD Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "better-sqlite3": "^12.6.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.11.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "pg": "^8.11.0",
    "pusher": "^5.1.0",
    "redis": "^4.6.0",
    "sqlite3": "^5.1.6",
    "systeminformation": "^5.21.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "eslint": "^8.52.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
